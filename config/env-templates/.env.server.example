# CyberSentinel DLP Server Configuration
# Copy this file to server/.env and update with your values

# Application
ENVIRONMENT=development
DEBUG=False
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
HOST=0.0.0.0
PORT=8000
WORKERS=4

# CORS and Security
CORS_ORIGINS=http://localhost:3000,http://0.0.0.0:3000,http://192.168.1.100:3000
ALLOWED_HOSTS=*

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=dlp_user
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_DB=cybersentinel_dlp
POSTGRES_POOL_SIZE=20
POSTGRES_MAX_OVERFLOW=10

# MongoDB
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USER=dlp_user
MONGODB_PASSWORD=your-mongodb-password
MONGODB_DB=cybersentinel_dlp
MONGODB_MAX_POOL_SIZE=100

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=

# Email (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=dlp@cybersentinel.local

# Wazuh Integration
WAZUH_HOST=localhost
WAZUH_PORT=1514
WAZUH_PROTOCOL=udp
WAZUH_API_URL=https://localhost:55000
WAZUH_API_USER=wazuh
WAZUH_API_PASSWORD=wazuh

# ML Configuration
ML_MODEL_PATH=./ml/models
ML_INFERENCE_BATCH_SIZE=32
ML_CONFIDENCE_THRESHOLD=0.75

# DLP Configuration
DLP_MAX_FILE_SIZE_MB=100
DLP_SCAN_TIMEOUT_SECONDS=30
DLP_QUARANTINE_PATH=./quarantine

# Classification Thresholds
CLASSIFICATION_HIGH_RISK_THRESHOLD=0.85
CLASSIFICATION_MEDIUM_RISK_THRESHOLD=0.60

# Monitoring
METRICS_ENABLED=True
HEALTH_CHECK_INTERVAL=30

# Feature Flags
FEATURE_ML_CLASSIFICATION=True
FEATURE_REAL_TIME_BLOCKING=True
FEATURE_CLOUD_CONNECTORS=True
